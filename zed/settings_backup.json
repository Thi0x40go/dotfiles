// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "format_on_save": "prettier",
  "git_panel": {
    "dock": "right"
  },
  "auto_install_extensions": {
    "html": true,
    "javascript": true,
    "catppuccin-blur": true,
    "twig": true,
    "charmed-icons": true
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "icon_theme": "Charmed Icons",
  "vim_mode": true,
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Cyberdream light",
    "dark": "Smooth Dark"
  },
  "file_types": {
    "HTML": ["twig"]
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "experimental.theme_overrides": {
    "background": "#00161860",
    "editor.background": "#00161860",
    "editor.gutter.background": "#0A181850",
    "tab_bar.background": "#0A181850",
    "terminal.background": "#0A181850",
    "terminal.ansi.dim_black": "#0A181850",
    "toolbar.background": "#0A181850",
    "tab.active_background": "#0A181850",
    "tab.inactive_background": "#0A181850",
    "status_bar.background": "#0A181850",
    "title_bar.background": "#0A181850",
    "panel.background": "#0A181850",
    "editor.active_line.background": "#0A181850"
  }
}
